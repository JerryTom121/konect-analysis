#! /bin/sh
#
# Compute the intersection of two network lists.
#
# INVOCATION
#
# 	$0 FILE-1 FILE-2
#

set -e

if [ -z "$1" -o -z "$2" ] ; then
	echo >&2 '*** Error in invocation'
	exit 1
fi

tmp1="${TMPDIR:-/tmp/}/$$.intersect.1"
tmp2="${TMPDIR:-/tmp/}/$$.intersect.2"

sort -k 1b,1 "$1" >"$tmp1"
sort -k 1b,1 "$2" >"$tmp2"

join "$tmp1" "$tmp2" | 
sh/sort-networks
