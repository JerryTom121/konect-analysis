#! /usr/bin/env julia
#
# Plot inter-event distributions.
#
# This is the first Julia code in KONECT, and therefore can serve as an
# example of how to do it. 
#
# PARAMETERS 
#	$network	Network name
#
# INPUT FILES
#	dat/out2.$network
#
# OUTPUT FILES
# 	plot/inter.{a}.$network.eps
#		a	Overall distribution
#

using PyPlot;

include("step_full.jl");

network = ENV["network"]; 

T = readdlm("dat/out2.$network", '\t'); 

t = T[:,4];  
sort!(t);

d = t[2:end] - t[1:end-1];
d = d[d .!= 0]; 

fig = figure("Title", figsize=(5,3.7)); 

step_full(d);

xlabel("Inter-event time (t) [s]");
ylabel("P(x â‰¥ t)");

tight_layout();
savefig("plot/inter.a.$network.eps");
